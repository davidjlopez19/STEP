<!-- <div class="col-10 offset-1"> -->
  <div class="col-10 offset-1 booyah-box">
    <h1 class="text-center">Learn something today</h1>
    <hr />

    <% @courses.each do |course| %>
      <h4 class="text-center">
        <%= link_to course.title, course_path(course) %> 
        <% if course.image.url %>
          <%= image_tag course.image.url, class: 'img-fluid' %>
        <% end %>
      </h4>
      <br />
      <div class="row">
        <div class="col-sm-8 col-12">
          <%= course.description %>
        </div>
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
        </div>
      </div>
      <br class="clr">
    <% end %>
  <!-- </div> -->
</div>