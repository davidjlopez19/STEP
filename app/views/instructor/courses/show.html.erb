<div class="col-10 offset-1">
  <br />
  <div class="booyah-box">
    <h1 class="text-center"><%= current_course.title %></h1>
    <% if current_course.image.url.present? %>
      <%= image_tag current_course.image.url, class: 'img-fluid' %>
    <% end %>
    <br />
    <div class="row col-6 offset 6">
      <div class="text-center preview" id="button1">
        <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
      </div>
      <br class="clr" />
      <div class="text-center" id="button2">
        <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary left-margin' %>
      </div>
    </div>

    <ul>
      <% current_course.sections.each do |section| %>
        <li>
          <%= section.title %>
          <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary btn-sm' %>
          <ul>
            <% section.lessons.each do |lesson| %>
              <li>
                <b><%= lesson.title %></b>
                
                -

                <%= lesson.subtitle %>
              </li>
            <% end %>
          </ul>
          <br class="clr">
        </li>
      <% end %>
    </ul>
    
  </div>
</div>