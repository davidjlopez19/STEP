<!DOCTYPE html>
<html>
  <head>
    <title>STEP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'STEP', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item active">
              <%= link_to image_tag("Home_Icon.PNG", :alt => "image-logo", size: "35x25"), root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Sign In
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink"> 
                  <% if user_signed_in? %>
                    <a class="dropdown-item"><%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %></a>
                    <a class="dropdown-item"><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %></a>
                  <% else %>
                    <a class="dropdown-item"><%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %></a>
                    <a class="dropdown-item"><%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %></a>
                  <% end %>
                </div>
              </li>
            </ul>
        </div>
      </nav>


      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <h4>Teachers</h4>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <h4>About</h4>
            <br />
            <%= link_to 'Team', team_path %>
            <br />
            <%= link_to 'Careers', career_path %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <h4>Contact</h4>
            <br />
            davidjlopez@comcast.net
            <br />
            317 N. Main St.
            <br />
            Pueblo CO, 81003
          </div>
          <div class="col-12 col-sm-3">
            <h4>Social</h4>
            <br />
            <%= link_to 'http://github.com/davidjlopez19' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/david.lopez.7564' do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://twitter.com/haymus19' do %>            
            <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
